    function exportToExcel() {

        console.log(exceldata)
        result = exceldata;

        var columns = [
            "FY", "Month", "Site", "GHI", "POA", "kWh", "MA (%)", "IGA (%)", "EGA (%)", "PR", "PLF (%)","P50","P75","P90"
        ];

        var rows = [];

