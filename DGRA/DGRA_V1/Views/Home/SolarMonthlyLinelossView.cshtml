    function exportToExcel() {

        console.log(exceldata)
        result = exceldata;

        var columns = [
            "FY", "Site", "Month", "Line Losses (%)"
        ];

        var rows = [];

        for (var i = 0; i < result.length; i++) {
            var row = [];
            row.push(result[i].fy);
            row.push(result[i].sites);
            row.push(result[i].month);
            row.push(result[i].lineLoss);
            rows.push(row);

        }

        var data = [columns].concat(rows);

        var ws = XLSX.utils.aoa_to_sheet(data);
        var wb = XLSX.utils.book_new();
        XLSX.utils.book_append_sheet(wb, ws, "Solar Monthly Line Loss");
        var wbout = XLSX.write(wb, { bookType: 'xlsx', type: 'binary' });

        function s2ab(s) {
            var buf = new ArrayBuffer(s.length);
            var view = new Uint8Array(buf);
            for (var i = 0; i !== s.length; ++i) view[i] = s.charCodeAt(i) & 0xFF;
            return buf;
        }

        saveAs(new Blob([s2ab(wbout)], { type: "application/octet-stream" }), "Solar Monthly Line Loss.xlsx");

    }
